@model ChocAn.DataCenterConsole.Models.MemberDetailsViewModel
@{
    ViewData["Title"] = "Members";
}

<div>
    <section style="margin-top: 20px">
        <div class="card" style="width: 24em">
            <div class="card-header">
                Member ID: @Model.Number
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    Address: @Model.StreetAddress<br />@Model.City, @Model.State @Model.ZipCode
                </p>
                <p class="card-text">
                    Status: @Model.Status
                </p>
                <hr>
                <a href="#" class="card-link">Update</a>
                <a href="#" class="card-link">Delete</a>
            </div>
        </div>
    </section>
</div>

